<odoo>
    <data>
        <!-- action that is called by the menuitem with id menu_patient -->
        <record id="action_hospital_female_patient" model="ir.actions.act_window">
            <field name="name">Female Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_gender': 'female'}</field>
            <field name="domain">[('gender', '=', 'female')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There is no data!
                </p>
            </field>
        </record>  
        <!-- the above action is called by clicking on below menuitem -->
        <menuitem id="menu_female_patient" name="Female Patients" parent="menu_patient_master" sequence="20" action="action_hospital_female_patient" />
    </data>
  </odoo>